{
  "name": "kiln-it",
  "version": "1.0.0",
  "description": "\"Keep records of clay percent shrinkage, weight and dates of firing for my clay creations\"",
  "main": "index.js",
  "engines": {
    "node": "18.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emilyparkes/kiln-it.git"
  },
  "author": "Emily Coco Parkes",
  "keywords": [
    "fullstack",
    "web",
    "development",
    "practice"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/emilyparkes/kiln-it/issues"
  },
  "homepage": "https://github.com/emilyparkes/kiln-it#readme",
  "scripts": {
    "start": "ts-node server/index.ts",
    "dev": "npm run dev:client && npm run dev:server",
    "dev:client": "webpack --config client/webpack.config.js --watch",
    "dev:server": "nodemon server/index.ts",
    "build": "npm run build:client build:server",
    "build:client": "npm run webpack -- --mode production",
    "build:server": "npm run knex -- migrate:latest",
    "webpack": "webpack --config ./client/webpack.config.js",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "db": "npm run db:migrate && npm run db:seed",
    "db:seed": "npm run knex seed:run",
    "db:migrate": "npm run knex migrate:latest",
    "db:rollback": "npm run knex migrate:rollback",
    "db:reset": "npm run knex migrate:rollback && npm run db",
    "check": "npm run lint && npm run test",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --noStackTrace --watchAll",
    "test:client": "jest /client --watchAll --verbose",
    "test:server": "jest /server --watchAll --verbose"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    "@babel/plugin-proposal-object-rest-spread"
  ],
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "@redux-devtools/extension": "^3.2.3",
    "express": "^4.17.2",
    "knex": "^2.3.0",
    "pg": "^8.8.0",
    "sqlite3": "^5.1.2",
    "superagent": "7.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.17.12",
    "@babel/register": "^7.13.14",
    "@devacademy/eslint-config": "^1.8.0",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/icons-material": "^5.10.3",
    "@mui/material": "^5.10.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.4",
    "@testing-library/user-event": "^12.7.1",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.3.0",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-errors": "^1.8.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.3.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.3.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-icons": "^4.2.0",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "redux": "^4.1.1",
    "redux-thunk": "^2.4.2",
    "sass": "^1.50.1",
    "sass-loader": "12.6.0",
    "style-loader": "^3.3.0",
    "supertest": "^6.2.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "~4.8.4",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "browserslist": "> 2%, not dead"
}